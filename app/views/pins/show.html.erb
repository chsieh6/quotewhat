<% provide(:title, 'The Pin') %>
<div class="container show_pin">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 well">
  		<%= image_tag @pin.image %>
			<p class="pin_text content"><%= @pin.content %> - <%= @pin.author %></p>
		  <hr style="margin: 10px"></hr>
		  <p class="pin_text"><strong>Category: <%= @pin.category %></strong> - 
				<% if (current_user == @pin.user) || (current_user.admin) %>
				  	<%= link_to 'Edit', edit_pin_path(@pin) %>
				<% end %>
			</p>
			<%= link_to 'Your Profile', current_user %>
		</div>
	</div>
</div>