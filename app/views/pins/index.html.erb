<!-- Render the Homepage if the User is not signed in -->
<%= render 'static_pages/home' unless user_signed_in? %>

<!-- Render the Index Page if the user is signed in -->
<% provide(:title, 'Destinations') %>
<!-- Index Pin Header -->
<div id="indexheader">
	<div id="indexheader-text">
		<h1>Every <span><em>New Destination</em></span> is a <span><em>New Experience</em></span></h1>
	</div>
</div>
<!-- /Index Pin Header  -->
<div class="index-container">
	<!-- Left Content - All Quotes -->
	<div class="row">
		<div class="col-md-9">
			<!-- Display All Pins -->
		  <div id="masonry-container", class="transitions-enabled infinite-scroll clearfix">
		    <%= render @pins %>
		  </div>
		  <%= will_paginate @pins %>
		</div> <!-- End of Left Content -->
		<!-- Right Content - Search Bar, Categories, Ad -->
		<div class="col-md-3">
			<!-- Keyword Search -->
			<div class="well index-well" style="margin-top: 10px">
        <h4>Quote Search</h4>
        <%= form_tag(pins_path, :method => "get") do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: "form-control search-bar", placeholder: "Search Quotes" %>
            <div class="input-group-btn">
              <button class="btn btn-default search-btn" type="submit">Search</button>
            </div>
          </div>
        <% end %>
      </div> 
      <!-- Search By Popular Authors -->
      <div class="well index-well">
        <h4>Popular Authors</h4>
        <div class="row">
          <div class="col-md-6">
            <ul class="list-unstyled">
              <li><a href="#dinosaurs">Dinosaurs</a></li>
              <li><a href="#spaceships">Spaceships</a></li>
              <li><a href="#fried-foods">Fried Foods</a></li>
              <li><a href="#wild-animals">Wild Animals</a></li>
            </ul>
          </div>
          <div class="col-md-6">
            <ul class="list-unstyled">
              <li><a href="#alien-abductions">Alien Abductions</a></li>
              <li><a href="#business-casual">Business Casual</a></li>
              <li><a href="#robots">Robots</a></li>
              <li><a href="#fireworks">Fireworks</a></li>
            </ul>
          </div>
        </div>
      </div>
      <!-- Search By Popular Categories -->
      <div class="well index-well">
        <h4>Popular Categories</h4>
        <div class="row">
          <div class="col-md-6">
            <ul class="list-unstyled">
              <li><a href="#dinosaurs">Dinosaurs</a></li>
              <li><a href="#spaceships">Spaceships</a></li>
              <li><a href="#fried-foods">Fried Foods</a></li>
              <li><a href="#wild-animals">Wild Animals</a></li>
            </ul>
          </div>
          <div class="col-md-6">
            <ul class="list-unstyled">
              <li><a href="#alien-abductions">Alien Abductions</a></li>
              <li><a href="#business-casual">Business Casual</a></li>
              <li><a href="#robots">Robots</a></li>
              <li><a href="#fireworks">Fireworks</a></li>
            </ul>
          </div>
        </div>
      </div> <!-- End of Popular Categories -->
    </div> <!-- End of Right Content -->
	</div> <!-- End of row -->
</div> <!-- End of index-container -->
