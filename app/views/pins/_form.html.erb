<div class="panel-body">
	<%= form_for(@pin) do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, rows: "5", placeholder: "I have no special talent.  I am only passionately curious.", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, placeholder: "Albert Einstein", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.select(:category, options_for_select([['Love', 'love'], ['Humor', 'humor']], "love"), {}, {class: "form-control"}) %>
  </div>
  <h3>Upload a Picture Quote</h3>
  <hr>
	<div class="form-group">
		<%= f.label :image, "From Computer" %>
		<%= f.file_field :image, class: "form-control" %>
	</div>
  <div class="form-group">
  	<%= f.label :image_remote_url, "From Website" %>
  	<%= f.text_field :image_remote_url, placeholder: "http://prettypic.com/mountain.jpg", class: "form-control" %>
	</div>
	<div class="form-group">
  	<%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
	</div>
</div>

